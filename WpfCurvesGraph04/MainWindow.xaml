<Window x:Class="WpfCurvesGraph04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCurvesGraph04"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Name="ImageDisplay" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <Slider Name="ControlPoint1Slider" Minimum="0" Maximum="1" Value="0.3" Width="100" ValueChanged="CurveSlider_ValueChanged"/>
            <Slider Name="ControlPoint2Slider" Minimum="0" Maximum="1" Value="0.7" Width="100" ValueChanged="CurveSlider_ValueChanged"/>
        </StackPanel>
    </Grid>
</Window>
