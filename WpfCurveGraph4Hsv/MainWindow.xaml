<Window x:Class="WpfCurveGraph4Hsv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCurveGraph4Hsv"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="ImageDisplay" Stretch="Uniform" Margin="10"/>
        <Canvas x:Name="CurvesCanvas" Background="LightGray"
                Height="150" Width="150"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="10 0 0 50"
                MouseLeftButtonDown="CurvesCanvas_MouseLeftButtonDown"
                MouseMove="CurvesCanvas_MouseMove">
            <!-- 곡선의 제어점을 표시할 Ellipse를 추가할 예정 -->
        </Canvas>
        <Button Content="Apply Curves" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="ApplyCurves_Click"/>
        <Button Content="Load Image" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="LoadImage_Click"/>
    </Grid>
</Window>
