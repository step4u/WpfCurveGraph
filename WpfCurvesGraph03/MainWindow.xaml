<Window x:Class="WpfCurvesGraph03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCurvesGraph03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Name="ImageDisplay" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Slider Name="CurveSlider" Minimum="-100" Maximum="100" Value="0" VerticalAlignment="Bottom" Margin="10" Height="30"
                ValueChanged="CurveSlider_ValueChanged"/>
    </Grid>
</Window>
